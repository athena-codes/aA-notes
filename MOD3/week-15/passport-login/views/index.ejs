<style>
  h1 {
    text-align: center;
    font-size: 40px;
    margin-bottom: 50px;
    animation: fadeIn 2s ease-in-out;
  }

  h3 {
    text-align: center;
    font-size: 20px;
    margin-bottom: 50px;
  }

  form {
    display: flex;
    justify-content: center;
  }

  button[type="submit"] {
    padding: 10px 20px;
    background-color: lightblue;
    color: white;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    font-size: 16px;
    animation: fadeIn 2s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }
</style>


<h1>Welcome <%= name %>!</h1>
<h3>You are now logged in.</h3>
<!-- repalaces method for logout from POST to DELETE  -->
<form action="/logout?_method=DELETE" method="POST">
  <button type="submit">Log Out</button>
</form>
